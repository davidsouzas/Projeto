@model IEnumerable<RegulaGasto.Dominio.Gasto>

@{
    ViewBag.Title = "Lista De Gastos";
}

<h2>Lista de Gastos</h2>

<table class="table">
    <tr>
        <td>
            <label style="color:Brown; font-weight: bolder">Inserir Novo Gasto</label>
            <a class="img-rounded" href='@Url.Content("~/Gasto/Cadastrar")'> <img src="~/Content/Images/Button-Add-icon.png" /></a>
        </td>
        <td>
            <label style="color:Brown; font-weight: bolder">Consultar por Categoria</label>
            <a class="img-rounded" href='@Url.Content("~/Gasto/Consultar")'> <img src="~/Content/Images/Lupa-Icon.png" /></a>
            @*@Html.ActionLink("Inserir Novo Gasto", "Cadastrar",null, new { Style = "color:Brown; font-weight: bolder; background-color: Brow"}) <br/>*@
            @*@Html.ActionLink("Consultar por Categoria", "Consultar", null, new { Style = "color:Brown; font-weight: bolder; background-color: Brow" })*@
        </td>
        <td>
            <label style="color:Brown; font-weight: bolder">Listar Por Mês</label>
            <a class="img-rounded" href='@Url.Content("~/Gasto/ListarPorMes")'> <img src="~/Content/Images/Lupa-Icon.png" /></a>
        </td>
    </tr>
</table>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Mes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Mes)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
            </td>
        </tr>
    }


</table>

@if (ViewData["Total"] != null)
{
    <p>Total: @ViewData["Total"]</p>

}

